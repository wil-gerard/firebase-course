{
    "env": {
        "browser": true,
        "es2021": true,
        "mocha": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "ignorePatterns": ["dist/*.js"],
    "rules": {
        "max-len": ["error", {
            "ignoreStrings": true,
            "ignoreTemplateLiterals": true,
            "ignoreComments": true,
            "ignorePattern": "^\\s*<.*>\\s*$"
        }],
        "no-console": "off",
        "react/prop-types": 0,
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "linebreak-style": [0, "error", "windows"],
        "indent": ["error", 2]
    }
}
